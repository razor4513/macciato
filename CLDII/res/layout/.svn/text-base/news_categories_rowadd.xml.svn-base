<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plateRelativeLayout"
    android:layout_width="173dp"
    android:layout_height="fill_parent"
    android:background="?gridPlateBg"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/plateImageView"
                android:layout_width="83.33dp"
                android:layout_height="83.33dp"
                android:src="@drawable/icon_rss" />

            <ImageView
                android:id="@+id/addImageView"
                android:layout_width="36.67dp"
                android:layout_height="36.67dp"
                android:layout_alignRight="@id/plateImageView"
                android:layout_alignTop="@id/plateImageView"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="-2dp"
                android:src="@drawable/icon_add" />
        </RelativeLayout>

        <TextView
            android:id="@+id/plateTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/news_add_category"
            android:textColor="?grid_plates"
            android:textSize="16.00sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

</RelativeLayout>