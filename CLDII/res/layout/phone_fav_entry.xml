<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plateRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="173dp"
    android:background="?gridPlateFavBg"
    android:gravity="center"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.67dp"
        android:layout_marginRight="9.33dp"
        android:layout_marginTop="9.33dp" >

        <ImageView
            android:id="@+id/plateImageView"
            android:layout_width="fill_parent"
            android:layout_height="119dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/contact_center_cropped" />

        <TextView
            android:id="@+id/plateTextView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/plateImageView"
            android:gravity="center"
            android:lineSpacingExtra="1dp"
            android:lines="2"
            android:maxLines="2"
            android:minLines="2"
            android:padding="3dp"
            android:textColor="?grid_plates"
            android:textSize="12.67sp"
            android:textStyle="normal"
            android:typeface="sans" />
    </RelativeLayout>

</RelativeLayout>